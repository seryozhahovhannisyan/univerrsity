<!--Authentication-->
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

    <package name="student_auth_package"  extends="json-default" abstract="true">

        <interceptors>

            <interceptor name="student_authentication" class="com.university.web.action.general.interceptor.StudentAuthInterceptor"/>
            <interceptor name="language" class="com.university.web.action.general.interceptor.LanguageInterceptor"/>

            <interceptor-stack name="student_auth_stack">
                <interceptor-ref name="student_authentication"/>
                <interceptor-ref name="language"/>
                <interceptor-ref name="defaultStack"/>
            </interceptor-stack>


        </interceptors>

        <default-interceptor-ref name="student_auth_stack"/>

    </package>
</struts>